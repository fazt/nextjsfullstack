
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  lastname String
  role     String
  email    String
  password String

  confirmed String

  products Product[]

  createdAt DateTime @default(now())
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String

  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])

  userId      Int
  user        User @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String

  products    Product[]
}